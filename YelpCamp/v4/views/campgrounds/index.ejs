<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>
                View our hand-picked campgrounds from all over the world!
            </p>
            <p>
                <a class="btn btn-primary btn-large "href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center d-flex flex-wrap" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-md-4 col-md-6 col-sm-12 ">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" style="height: 240px; width: 180;">
                </div>
                <div class="caption">
                    <%= campground.name %>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info!</a>
                </p>
            </div>
        <% }) %>
    </div>
</div>

<%- include("../partials/footer") %>
